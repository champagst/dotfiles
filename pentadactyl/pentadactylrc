" Scroll up faster
nmap -builtin -silent j 3j

" Scroll down faster
nmap -builtin -silent k 3k

" Jump to quickmark in current tab (Instead of mark)
nmap -builtin "'" go

" Jump to quickmark in new tab
nmap -builtin '"' gn

" Next tab
nmap -builtin ) :tn<CR>

" Previous tab
nmap -builtin ( :tp<CR>

" Use ; over : for commands
nmap -builtin ; :

" Close tab
nmap -builtin x d

" Scroll down
nmap -builtin d <C-d>

" Scroll up
nmap -builtin u <C-u>

" Prevent x on the last tab from closing the window
:set! browser.tabs.closeWindowWithLastTab=false

set hlfind

nmap -builtin ,<space> <esc>:noh<CR>

javascript dactyl.beep = function() { return false; }
